<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MediHub"
        tools:targetApi="31">
        <activity
            android:name=".activities.doctor.UpcomingAppointmentsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.PendingRequestsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.AdminActivity"
            android:exported="false" />
        <activity
            android:name=".activities.doctor.DoctorActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.ApprovedRequestsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.admin.DeclinedRequestsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.patient.PatientActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.registrations.RegistrationOptionActivity" />
        <activity android:name=".activities.registrations.PatientRegistrationActivity" />
        <activity android:name=".activities.registrations.DoctorRegistrationActivity" />
        <activity android:name=".activities.registrations.LoginActivity" />
        <activity android:name=".activities.registrations.WelcomeActivity" />
    </application>

</manifest>